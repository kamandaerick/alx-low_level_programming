# -*-Makefile-*-

CC: gcc
SRC: main.c school.c
OBJ: $(SRC:.c=.o)
NAME: school
RM: rm -f

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
all: $(NAME)

clean:
	$(RM) *~ *.swp

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

-include $(OBJ:.o=.d)

%.0: %.c
	$(CC) -c -MMD -o $@ $<
